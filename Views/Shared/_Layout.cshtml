<body>

 <div class="topbar clearfix">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-right">

                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Nom utilisateur -->
                    <span class="me-3">
                        <i class="fa fa-user"></i> @User.Identity.Name
                    </span>

                    <!-- Lien admin si rôle -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="text-white me-3" href="/Admin">Admin</a>
                    }

                    <!-- Déconnexion -->
                    <form method="post" asp-controller="Account" asp-action="Logout" >
                        <button type="submit" class="btn btn-sm btn-outline-light text-white me-3">
                            Déconnexion
                        </button>
                    </form>
                }
                else
                {
                    <!-- Connexion / Inscription -->
                    <a class="text-white me-3" asp-controller="Account" asp-action="Login">Connexion</a>
                    <a class="text-white" asp-controller="Account" asp-action="Register">Inscription</a>
                }

            </div>
        </div>
    </div>
</div>


